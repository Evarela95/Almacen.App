@using Almacen.Domain.InputModels.Users
@model LoginInputModel

@{
    ViewData["Title"] = "Login Page";

}
<div class="container-fluid justify-content-center">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <fieldset>
            <legend>Login</legend>
            <div class="col-4">
                <label asp-for="Email" class="form-label"> Email Address:</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="Password" class="form-label"> Password:</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="cold-4">
                <button type="submit" class="btn btn-primary">Sign In</button>
            </div>
        </fieldset>
    </form>

    <form asp-action="ExternalSignin" method="post" asp-route-returnUrl="@Model.ReturnUrl">
        @foreach (var externalLogin in Model.ExternalLogins)
        {

            <button type="submit" class="btn btn-outline-secondary" name="provider" value="@externalLogin.Name">
                @externalLogin.DisplayName
            </button>

        }
    </form>
</div>
