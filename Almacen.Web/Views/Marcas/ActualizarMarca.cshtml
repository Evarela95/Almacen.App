@using Almacen.Domain.InputModels.Marca
@model ExistingMarca

@{
    ViewData["Title"] = "Actualizar marca";
}

<div class="container-fluid" style="max-width:924px;">
    <div class="row">
        <div class="col-8">
            <h1><i class="fa-solid fa-person"></i>Actualizar</h1>
        </div>
    </div>
    <form method="post">
        <fieldset>
            <div class="table">
                <input type="hidden" asp-asp-for="@Model.Id_Marca" />
                <div class="row">
                    <div class="col-12" text-danger asp-validation-summary="ModelOnly"></div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.Nombre_Marca" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.Nombre_Marca" class="form-control" />
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-outline-success">Guardar</button>
                        <a asp-controller="Marcas" asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

</div>