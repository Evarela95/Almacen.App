@using Almacen.Domain.InputModels.Proveedor
@model ExistingProveedor

@{
    ViewData["Title"] = "Editar proveedor";
}

<div class="container-fluid" style="max-width:924px;">
    <div class="row">
        <div class="col-8">
            <h1><i class="fa-solid fa-person"></i>Editar sucursal</h1>
        </div>
    </div>
    <form method="post">
        <fieldset>
            <div class="table">
                <input type="hidden" asp-asp-for="@Model.Id_Proveedor" />
                <div class="row">
                    <div class="col-12" text-danger asp-validation-summary="ModelOnly"></div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.Nombre_Proveedor" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.Nombre_Proveedor" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.Telefono" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.Telefono" class="form-control" />
                        <span asp-validation-for="@Model.Telefono" class="text-danger"> </span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.Correo" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.Correo" class="form-control" />
                        <span asp-validation-for="@Model.Correo" class="text-danger"> </span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-outline-success">Guardar</button>
                        <a asp-controller="Proveedores" asp-action="Index" class="btn btn-outline-danger">Cancel</a>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

</div>