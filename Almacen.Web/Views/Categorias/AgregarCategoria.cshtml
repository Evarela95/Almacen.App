@using Almacen.Domain.InputModels.Categoria;
@model NewCategoria

@{
    ViewData["Title"] = "Nueva categoría de producto";
}

<div class="container-fluid" style="max-width:924px;">
    <div class="row">
        <div class="col-8">
            <h1><i class="fa-solid fa-person"></i> Categoría de producto</h1>
        </div>
    </div>
    <form method="post">
        <fieldset>
            <div class="table">
                <div class="row">
                    <div class="col-12" text-danger asp-validation-summary="ModelOnly"></div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.Nombre_Categoria" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.Nombre_Categoria" class="form-control" />
                        @* <span asp-validation-for="@Model.Nombre_Sucursal" class="text-danger"> </span> *@
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-outline-success">Agregar</button>
                        <a asp-controller="Categorias" asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

</div>