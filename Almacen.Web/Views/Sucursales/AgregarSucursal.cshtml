@using Almacen.Domain.InputModels.Sucursal;
@model NewSucursal

@{
    ViewData["Title"] = "Nueva sucursal";
}

<div class="container-fluid" style="max-width:924px;">
    <div class="row">
        <div class="col-8">
            <h1><i class="fa-solid fa-person"></i> Sucusal</h1>
        </div>
    </div>
    <form method="post">
        <fieldset>
            <div class="table">
                <div class="row">
                    <div class="col-12" text-danger asp-validation-summary="ModelOnly"></div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.Nombre_Sucursal" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.Nombre_Sucursal" class="form-control" />
                        @* <span asp-validation-for="@Model.Nombre_Sucursal" class="text-danger"> </span> *@
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.Correo" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.Correo" class="form-control" />
                       @*  <span asp-validation-for="@Model.Correo" class="text-danger"> </span> *@
                    </div>
                </div>

                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.Telefono" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.Telefono" class="form-control" />
                       @*  <span asp-validation-for="@Model.Telefono" class="text-danger"> </span> *@
                    </div>
                </div>

                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.Direccion" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.Direccion" class="form-control" />
                    @*     <span asp-validation-for="@Model.Direccion" class="text-danger"> </span> *@
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-outline-success">Agregar</button>
                        <a asp-controller="Sucursales" asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

</div>